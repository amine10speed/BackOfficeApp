<Window x:Class="BackOfficeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Nom d'utilisateur:" Margin="5"/>
            <TextBox x:Name="UsernameTextBox" Margin="5"/>

            <TextBlock Text="Mot de passe:" Margin="5"/>
            <PasswordBox x:Name="PasswordBox" Margin="5"/>

            <StackPanel Orientation="Horizontal" Margin="5">
                <RadioButton x:Name="AdminRadioButton" Content="Admin" GroupName="UserType" Margin="0,0,10,0"/>
                <RadioButton x:Name="EmployeRadioButton" Content="Employé" GroupName="UserType"/>
            </StackPanel>

            <Button Content="Se Connecter" Margin="5" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
